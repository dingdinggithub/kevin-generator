<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE entity SYSTEM "../dtd/table.dtd">
<!--
name:类名称,首字母大写
package:包名,方面后面的扩展(eg：com.zs.xybb.domian)
description：（类的中文名称）页面中用到
author：类的开发作者（注释会用到）
version:类的开发版本
 -->
<entity name="DepartmentInfo" table="department_info" description="部门信息" author="刘伟伟" since="1.0">
	<!-- 
		主键
	 -->
	<id name="id" column="id" type="int" description="主键"/>
	<!-- 
		name:表示属性名称
		type：属性类型,int | long | string | date 选择其中一个
		description:描述,生成注释需要，页面内容
	 -->
	<property name="pid" column="pid" type="string" description="父ID"/>
	<property name="name" column="name" type="string" description="职位名"/>
	<property name="remark" column="remark" type="string" description="备注"/>
	<property name="status" column="status" type="int" description="状态"/>
	<property name="inputDate" column="input_date" type="date" description="登记时间"/>
	<property name="inputUser" column="input_user" type="date" description="登记人"/>
</entity>